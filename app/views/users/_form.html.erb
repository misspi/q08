<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, qt(:user, :name) %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email, qt(:user, :email) %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, qt(:user, :password) %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, qt(:user, :password_confirmation) %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>


    <label>&nbsp;</label>
    <% if @user.new_record? %>
      <%= f.submit qt(:user, :create) %>
    <% else %>
      <%= f.submit qt(:user, :edit) %>
    <% end %>
  </p>
<% end %>
